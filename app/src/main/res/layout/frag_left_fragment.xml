<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FragLeft">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp">

        <TextClock
            android:id="@+id/clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:format24Hour="HH:mm"
            android:format12Hour="hh:mm"
            android:textSize="40dp"
            android:textColor="#010101"/>

        <TextClock
            android:id="@+id/clock_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock_time"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:format24Hour="MM-dd EE"
            android:format12Hour="MM-dd EE"
            android:textSize="22dp"
            android:textColor="#789323" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/clock_time"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="哈哈哈！！"
            android:textColor="#372988"
            android:textSize="34dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPhoneCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="电话"
            android:textSize="30dp"
            android:textColor="#425768"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="短信"
            android:textSize="30dp"
            android:textColor="#792322"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvCamera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="相机"
            android:textSize="30dp"
            android:textColor="#235678"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvBroswer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="上网"
            android:textSize="30dp"
            android:textColor="#534268"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>