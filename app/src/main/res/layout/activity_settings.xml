<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/set_switch_show_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:padding="14dp"
            android:text="@string/show_icon"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/set_chs_dock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/choose_dock_Apps"
            android:textColor="#000000"
            android:alpha="0.6"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/get_Usage_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/get_usage_stats_permmision"
            android:textColor="#000000"
            android:alpha="0.6"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/set_sort_mech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/app_sort_method"
            android:textColor="#000000"
            android:alpha="0.6"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/set_app_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/label_app_level"
            android:textColor="#000000"
            android:alpha="0.6"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/set_man_hidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/man_hidden"
            android:textColor="#000000"
            android:alpha="0.6"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/set_app_levels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="设置应用级别"
            android:textColor="#000000"
            android:alpha="0.6"
            android:textSize="18sp"/>

    </LinearLayout>

</ScrollView>